import java.util.Scanner;
public class Test{
	public static void main(String[] args) {
		
		System.out.println("Enter your name: ");
//		Scanner object_name(any name you want) = new(keyword to initialize new object) Scanner(System.in);
	 	Scanner object_name = new Scanner(System.in);

//	 	Now we get inputs from user and assign those to an variables
	 	
//	 	here we neet String type input, so we use nextLine() method
	 	String string_variable_name = object_name.nextLine();
	 	
	 	System.out.println("Enter your Age: ");
//	 	here we neet int type input, so we use nextInt() method
	 	int int_variable_name = object_name.nextInt();
		System.out.println("Your name is " + string_variable_name + ", and you are " + int_variable_name + " year old");
	}
}